<h2>ユーザー情報を変更する</h2>
<br>
<div class="wrapper col-md-4 col-md-offset-4 col-sm-offset-1 col-sm-10" style="padding-bottom:100px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
    <br> 
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <br>
    <% if @user.provider.blank? %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :パスワードを変更する %> <p><i>(<%= @minimum_password_length %>文字以上 ／ 変更しない場合は空欄にして次へ)</i></p>
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :変更後のパスワードを再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>
      <br> 
      <div class="field">
        <%= f.label :プロフィール画像変更 %>
        <p class="edit_profile_img"><%= profile_img(@user) if profile_img(@user) %></p>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <br><br>

      <div class="field">
        <%= f.label :現在のパスワードを入力してユーザー情報を更新 %>
        <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
      </div>


    <% end %>
 
    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
  
  <br><br>
  <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会してよろしいですか?" }, method: :delete %>
  <br>
  <%= link_to "戻る", :back %>
</div>
